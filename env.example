# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# LangSmith Configuration (optional - for observability and tracing)
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=customer-support-agent

# MODELS
TEXT_MODEL=mistral.mistral-large-2407-v1:0
VISION_MODEL=us.mistral.pixtral-large-2502-v1:0
REASONING_MODEL=us.anthropic.claude-sonnet-4-20250514-v1:0

# GENERATION SETTINGS
MAX_TOKENS=4000
TEMPERATURE=0
RECURSION_LIMIT=25

# GUARDRAILS
GUARDRAIL_ID=
GUARDRAIL_VERSION=

# JIRA AUTH
JIRA_API_USERNAME=
JIRA_API_TOKEN=
JIRA_INSTANCE_URL=

# JIRA PROJECT CONFIG
JIRA_PROJECT_KEY=
JIRA_ASSIGNEE_USERNAME=
JIRA_CATEGORY_FIELD_ID=
JIRA_RESPONSE_FIELD_ID=

# DATABASE
DATABASE_PATH=./data/customer_support.db

# CHECKPOINTER / AGENTCORE
AGENTCORE_MEMORY_ID=

# Amazon Cognito Configuration (for Streamlit UI authentication)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# LangGraph API Configuration (for Streamlit UI)
LANGGRAPH_API_URL=http://localhost:8123
LANGGRAPH_ASSISTANT_ID=Customer Support Agent

# COGNITO_CLIENT_SECRET is optional - only required if your Cognito App Client
# was created WITH a client secret (confidential client).
# For Streamlit apps, it's recommended to use a public client (no secret).
# If your App Client is a public client, leave this empty.
COGNITO_CLIENT_SECRET=
